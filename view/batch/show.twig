{% extends 'app/includes/template.twig' %}
{% block title %}Products{% endblock %}

{% block body %}


<div class="jumbotron bg-light col-lg-8 mx-auto">
  <h1><i class="fas fa-warehouse"></i> View Batch</h1>
<p class="text-muted">Plese use the menu to navigate between products</p>
  <ul class="nav p-2">
				 <li class="nav-item">
			    	<a class="btn btn-dark btn-circle" href="{{path_for('product.show',{product_id: batch.product.id})}}">
			    		<i class="fas fa-chevron-left"></i>
			    	</a>
				  </li>
				  <li>&nbsp</li>
				  <li class="nav-item">
			   		<a class="btn btn-dark btn-circle" href="{{path_for('product.index')}}">
				    	<i class="far fa-circle"></i>
				    </a>
				  </li>
				  <li>&nbsp</li>
				  <li class="nav-item">  
				    <a class="btn btn-dark btn-circle" href="{{path_for('batch.edit',{batch_id:batch.id})}}">
				    	<i class="fas fa-pen"></i>
				    </a>
				  </li>
				  <li>&nbsp</li>
				  <li class="nav-item">
				    <a class="btn btn-dark btn-circle" href="#" data-toggle="modal" data-target="#myModal">
				    	<i class="fas fa-times"></i>
				    </a>
				  </li>
				</ul>

<div class="alert alert-light p-2 m-1 row">

 		<table class="table mt-3">
 			<tr>
 				<td>Published</td>
 				<td>
 					{% if batch.is_published == 1 %}
						<b class="text-success"><i class="fas fa-check-circle"></i></b>
 					{% else %}
						<span class="text-muted"> No</span>
 					{% endif %}

 				</td>
 			</tr>
 			<tr>
 				<td>Name</td>
 				<td>{{batch.product.name}}</td>
 			</tr>
 			<tr>
 				<td>Stock</td>
 				<td>{{batch.amount}}</td>
 			</tr>
 			<tr>
 				<td>Price</td>
 				<td><i class="fas fa-strikethrough"></i>{{batch.price}}</td>
 			</tr>
 			<tr>
 				<td>Expiration Date</td>
 				<td>{{batch.expiration_date}}</td>
 			</tr>
 		</table>
</div>


</div>

<!-- The Modal -->
<div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h5 class="modal-title">Delete Confirmation</h5>
        
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        You will not be able to recover this item if you choose to delete it. 
        
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
      	<a class="btn btn-danger btn-sm" href="{{path_for('product.delete',{product_id : product.id})}}">Delete</a>
        <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Cancel</button>
      </div>

    </div>
  </div>
</div>


{% endblock %}