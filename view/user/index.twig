{% extends 'app/includes/template.twig' %}
{% block title %}Users{% endblock %}

{% block body %}

<div class="jumbotron bg-light col-lg-11 mx-auto">

  <h1><i class="fas fa-address-card"></i> Manage Users</h1>
  <p class="text-muted">Members: {{ users.count ? users.count : '0' }} | Active: 3 | Online: 5 | </p> 

  <p><a class="btn btn-dark btn-circle" href="{{path_for('user.add')}}"><i class="fas fa-plus"></i></a></p>


	<div class="list-group">
		{% for user in users %}
		  <a href="{{path_for('user.show',{user_id : user.id})}}" class="list-group-item list-group-item-action">
		  	<img class="m-0 p-0 " src="{{base_url('/') ~ user.avatar}}" alt="{{product.name}}" style="border-radius: 50%; height:30px; width:30px; border:2px solid #e6eeef;">
		  	<span class="text-muted">{{user.name}}</span>	
		  	{{ user.email().is_verified ? '<i class="fas fa-check-circle text-success float-right"></i>' : ''}}
		  </a>
		{% endfor %}
	</div>

</div>


{% endblock %}