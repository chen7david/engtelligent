{% for nick_name in user.nicknames %}
	<div class="form-group col-12 col-sm-6 col-md-3 col-lg-3 col-xl-3 py-3">
		<label class="text-muted" for="nick_name"><i class="fas fa-user"></i> Nick Name</label>

			<a class="nostyle text-dark float-right" href="" data-toggle="modal" data-target="#{{nick_name.id}}myModal">
			     <i class="fas fa-times"></i>
			</a>	

		<input type="hidden" name="nick_name[{{nick_name.id}}][id]" value="{{nick_name.id}}">
		<input class="gapex {{ errors.nick_name ? ' is-invalid': '' }}" type="text" name="nick_name[{{nick_name.id}}][nick_name]" id="nick_name" value="{{ old.nick_name ? old.nick_name : nick_name.nick_name}}">	
		{% if errors.nick_name %}
		  <span class="invalid-feedback">{{ errors.nick_name | first | capitalize }}</span>
		{% endif %}
	</div>


	<!-- The Modal -->
	<div class="modal" id="{{nick_name.id}}myModal">
	  <div class="modal-dialog">
	    <div class="modal-content">

	      <!-- Modal Header -->
	      <div class="modal-header">
	        <h5 class="modal-title">Delete Confirmation</h5>
	        
	      </div>

	      <!-- Modal body -->
	      <div class="modal-body">
	        You will not be able to recover this item if you choose to delete it. 
	        
	      </div>

	      <!-- Modal footer -->
	      <div class="modal-footer">
	      	<a class="btn btn-danger btn-sm" href="{{path_for('user.detach',{
					user_id:user.id,
					obj:'nick_name',
					obj_id:nick_name.id,
			})}}">Delete</a>
	        <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Cancel</button>
	      </div>

	    </div>
	  </div>
	</div>
{% endfor %}

