{% extends 'app/includes/template.twig' %}
{% block title %}Users{% endblock %}

{% block body %}


<div class="jumbotron bg-light col-lg-8 mx-auto">
  <h1><i class="fas fa-users"></i> Manage Groups</h1>
  <p class="text-muted">Groups: {{ groups.count ? groups.count : '0' }} | Active: 3 | Online: 5 | </p> 

  <p><a class="btn btn-dark btn-circle" href="{{path_for('group.create')}}"><i class="fas fa-plus"></i></a></p>

	
	<div class="list-group">
		<div class="list-group list-group-flush my-3 scrollable" style="height: 300px;">
		{% for group in groups %}
		  <a href="{{path_for('group.show',{group_id : group.id})}}" class="list-group-item list-group-item-action">
		  	<i class="fas fa-address-card"></i> <span class="text-muted"><b>({{group.group_id}})</b> {{group.name}}</span>	
		  </a>
		{% endfor %}
	</div>
	</div>

</div>


{% endblock %}