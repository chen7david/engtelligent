{% extends 'app/includes/template.twig' %}
{% block title %}Password Change{% endblock %}

{% block body %}

<div class="col-lg-3 mx-auto" style="margin-top: 5%">
	<h4>Password Recovery</h4>
	<hr>

	<form action="{{path_for('password.postchange')}}" method="post">
			
		<div class="form-group">
			<label for="password">Password</label>
			<input class="form-control {{ errors.password ? ' is-invalid': '' }}" type="password" name="password" id="password" value="{{ old.password }}">
			{% if errors.password %}
			  <span class="invalid-feedback">{{ errors.password | first | capitalize | replace({'_': ' '}) }}</span>
			{% endif %}
		</div>

		<div class="form-group">
			<label for="confirm_password">Confirm Password</label>
			<input class="form-control {{ errors.confirm_password ? ' is-invalid': '' }}" type="password" name="confirm_password" id="confirm_password" value="{{ old.confirm_password }}">
			{% if errors.confirm_password %}
			  <span class="invalid-feedback">{{ errors.confirm_password | first | capitalize | replace({'_': ' '}) }}</span>
			{% endif %}
		</div>

		<input type="hidden" name="hash" value="{{ old.hash ? old.hash : password.hash }}">
		<input class="btn btn-dark" type="submit" value="Submit">	

	</form>
</div>

{% endblock %}