{% extends 'app/includes/template.twig' %}
{% block title %}tvshows{% endblock %}

{% block body %}


<div class="jumbotron bg-light col-lg-8 mx-auto">
  <h1><i class="fas fa-warehouse"></i> Create New Tv Show</h1>
  <p class="text-muted">This is where you create tv shows.</p> 
  
  <form action="{{path_for('season.store')}}" method="post">

  	<!-- Menu items  -->
  	<ul class="nav p-2">
	 <li class="nav-item">
    	<a class="btn btn-dark btn-circle" href="{{path_for('tvshow.show',{tvshow_id:tvshow.id})}}">
    		<i class="fas fa-chevron-left"></i>
    	</a>
	  </li>
	  <li>&nbsp</li>
	  <li class="nav-item">
	  	<button class="btn btn-dark btn-circle" type="submit">
    		<i class="fas fa-check"></i>
   		</button>
	  </li>
	</ul>

  	<!-- Form Inputs -->

	<div class="form-group">
		<label for="rank"><b>Rank</b></label>
		<input class="form-control border-remove {{ errors.rank ? ' is-invalid': '' }}" type="text" name="rank" value="{{ old.rank ? old.rank: season.rank }}" id="rank">
		{% if errors.rank %}
		  <span class="invalid-feedback">{{ errors.rank | first | capitalize }}</span>
		{% endif %}
	</div>

	<div class="form-group">
		<label  for="description"><b>Description</b></label>
		<textarea class="form-control border-remove {{ errors.description ? ' is-invalid': '' }}" type="textarea" name="description" id="description" rows="2" cols="50">{{ old.description ? old.description: season.description }}</textarea>

		{% if errors.description %}
		  <span class="invalid-feedback">{{ errors.description | first | capitalize }}</span>
		{% endif %}
	</div>
	<input type="hidden" name="tv_show_id" value="{{tvshow.id}}">
</form>

	

</div>


{% endblock %}