{% extends 'app/includes/template.twig' %}
{% block title %}tvshows{% endblock %}

{% block body %}


<div class="jumbotron bg-light col-lg-8 mx-auto">
  <h1><i class="fas fa-tv"></i> Manage Tv Shows</h1>
  <p class="text-muted">Tv Shows: {{ tvshows.count ? tvshows.count : '0' }}</p> 

  <p><a class="btn btn-dark btn-circle" href="{{path_for('tvshow.create')}}"><i class="fas fa-plus"></i></a></p>


	<div class="list-group">
		<div class="list-group list-group-flush my-3 scrollable" style="height: 200px;">
		{% for tvshow in tvshows %}
		  <a href="{{path_for('tvshow.show',{tvshow_id : tvshow.id})}}" class="list-group-item list-group-item-action">
		  	<img class="m-0 p-0 " src="{{base_url('/') ~ tvshow.path}}" alt="{{product.name}}" style="border-radius: 50%; height:30px; width:30px; border:2px solid #e6eeef;">
		  	<span class="text-muted">{{tvshow.name}}</span>	
		  </a>
		{% endfor %}
		<div class="list-group list-group-flush my-3 scrollable" style="height: 160px;">
	</div>

</div>


{% endblock %}