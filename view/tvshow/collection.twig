{% extends 'app/includes/template.twig' %}
{% block title %}TvShow Collection{% endblock %}

{% block body %}

<div class="row">		
	
	{% for tvshow in tvshows %}

			{% if tvshow.is_published %}
			<div class="col-6 col-sm-6 col-md-3 col-lg-3 col-xl-2 p-2">
			  <a class="nostyle" href="{{path_for('tvshow.info',{tvshow_id : tvshow.id, season_rank: 1})}}">
					<div class="bg-dark">
					  <img class="card-img rounded-0" src="{{base_url('/') ~ tvshow.path}}" alt="Card image">	  
					</div>
				  </a>
			 </div>
		    {% endif %}

	{% endfor %}
	
</div>
{% endblock %}